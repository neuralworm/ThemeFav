{
  "name": "favoritethemes",
	"displayName": "favorite themes",
	"description": "Easily favorite themes and switch between them.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:favoritethemes.favoritethememessage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "favoritethemes.getFavorites",
				"title": "ThemeFav: Get favorite themes."
			},
			{
				"command": "favoritethemes.saveTheme",
				"title": "ThemeFav: Save Current $(save)"
			},
			{
				"command": "favoritethemes.selectFromFavorites",
				"title": "ThemeFav: Select"
			},
			{
				"command": "favoritethemes.removeFromFavorites",
				"title": "ThemeFav: Remove"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "theme-favorites",
					"title": "ThemeFav",
					"icon": "./resources/icon.svg"
				}
			]
		},
		"views": {
			"theme-favorites": [
				{
					"id": "favorites-list",
					"name": "Themes"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.84.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4",
		"@vscode/test-electron": "^2.1.5"
	}
}
